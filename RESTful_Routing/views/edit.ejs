<div class="ui main text container segment">
    <!-- SIMPLE TITLE FIX -->
    <div class="ui huge header">Edit <%= blog.title %> </div>
    <!-- ACTION CHANGE AND METHOD OVERRIDE INTRODUCED -->
        <!-- METHOD OVERRIDE FIXES ISSUE WITH HTTP SO THAT PUT IS RECGONIZED -->
        <!-- NEED TO INSTALL method-override AS A NPM PACKAGE FIRST -->
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <!-- VALUE MAKES IT SO THAT ALL THE ORIGINAL TEXT COMES SO THAT YOU CAN EDIT IT -->
            <input type="text" name="blog[title]" value=" <%= blog.title %> "> 
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value=" <%= blog.image %> "> 
        </div>
        <div class="field">
            <label>Blog Content </label>
            <!-- TEXTAREAS WORK DIFFERENTLY, BUT IT'S STILL SIMPLE -->
            <textarea name="blog[body]" required> <%= blog.body %> </textarea>
        </div>
            <input type="submit" class="ui violet basic">
    </form>
</div>

