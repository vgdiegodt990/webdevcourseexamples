<div class="ui main text container">
    <div class="ui huge header">RESTful Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src=" <%= blog.image %> ">
                    </div>
                    <div class="content">
                        <a class="header" href=" /blogs/<%= blog._id %> "> <%= blog.title %> </a>
                        <div class="meta">
                            <!-- toDateString TIDIES THE DATE -->
                            <span> <%= blog.created.toDateString() %> </span>   
                        </div>
                        <div class="description">
                            <!-- substring MAKES IT SO THAT ONLY A CERTAIN AMOUNT OF CHARACTERS IS SHOWN, NUMBERS INDICATE IT STARTED FROM 0 CHAR TO 50 CHAR -->
                            <p> <%- blog.body.substring(0, 100) %>... </p>    
                        </div>
                        <div class="extra">
                            <a class="ui floated basic green button" href=" /blogs/<%= blog._id %> ">
                                Read 
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

